# Environment variables for Docker Compose
# Copy this file to .env and fill in your values

# ==============================================================================
# Environment
# ==============================================================================
ENVIRONMENT=development
MODE=paper
DEBUG=false
LOG_LEVEL=INFO

# ==============================================================================
# Database (TimescaleDB)
# ==============================================================================
DB_PASSWORD=trading_password_change_me_in_production

# ==============================================================================
# Redis
# ==============================================================================
REDIS_PASSWORD=redis_password_change_me_in_production

# ==============================================================================
# Exchange API Keys (Binance Testnet)
# ==============================================================================
# Get testnet keys from: https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET_KEY=your_testnet_secret_key_here

# ==============================================================================
# Grafana
# ==============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_change_me_in_production

# ==============================================================================
# pgAdmin (Optional)
# ==============================================================================
PGADMIN_EMAIL=admin@trading.local
PGADMIN_PASSWORD=admin_change_me_in_production

# ==============================================================================
# Risk Management
# ==============================================================================
RISK_MAX_POSITION_SIZE_USD=1000
RISK_MAX_POSITIONS=3
RISK_MAX_LEVERAGE=3.0
RISK_MAX_DAILY_LOSS_PCT=0.05
